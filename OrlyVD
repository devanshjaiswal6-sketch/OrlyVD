  <!-- Scratch area (hidden until Yes is clicked) -->
  <div class="scratch-wrap" id="scratchWrap" aria-hidden="true">
    <div class="scratch-card" role="region" aria-label="Scratch to reveal message">
      <div class="scratch-message" id="scratchMessage">Use CODE "LOVE10" to get 10% off at Orly!</div>
      <div class="scratch-cover" id="scratchCover" aria-hidden="false">
        <canvas id="scratchCanvas" width="0" height="0"></canvas>
        <div class="scratch-hint">Scratch to reveal <button id="revealBtn" type="button" aria-label="Reveal message">Reveal</button></div>
