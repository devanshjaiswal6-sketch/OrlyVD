  <script>
    // Defensive feature detection (ensure these exist before use)
    const isTouchDevice = (typeof window !== 'undefined' && window.matchMedia && window.matchMedia('(pointer: coarse)').matches) || false;
    const prefersReducedMotion = (typeof window !== 'undefined' && window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches) || false;

    // Node refs
    const yesBtn = document.getElementById('yesBtn');
    const noBtn = document.getElementById('noBtn');
    const buttonArea = document.getElementById('buttonArea');
    const success = document.getElementById('success');
    const countdownEl = document.getElementById('countdown');

    // Scratch refs
    const scratchWrap = document.getElementById('scratchWrap');
    const scratchCover = document.getElementById('scratchCover');
    const scratchCanvas = document.getElementById('scratchCanvas');
    const revealBtn = document.getElementById('revealBtn');

    // State
    let noClicks = 0;
    let shrinkFactor = 1;

    /* -------- Countdown -------- */
    const target = new Date('February 14, 2026 00:00:00').getTime();

    function updateCountdown() {
      const now = Date.now();
      const diff = target - now;

      if (diff <= 0) {
        countdownEl.textContent = "It‚Äôs Valentine‚Äôs Day üíò";
        return;
      }

      const d = Math.floor(diff / (1000 * 60 * 60 * 24));
      const h = Math.floor((diff / (1000 * 60 * 60)) % 24);
      const m = Math.floor((diff / (1000 * 60)) % 60);

      countdownEl.textContent = `${d} days ‚Ä¢ ${h} hrs ‚Ä¢ ${m} mins to go üíû`;
    }

    updateCountdown(); // show immediately
    setInterval(updateCountdown, 1000);

    /* -------- No Button Dodge (throttled) -------- */
    if (!isTouchDevice) {
      let rafId = null;

      buttonArea.addEventListener('mousemove', (e) => {
        if (rafId) return;
        rafId = requestAnimationFrame(() => {
          rafId = null;
          const rect = noBtn.getBoundingClientRect();
          const dist = Math.hypot(
            e.clientX - (rect.left + rect.width / 2),
            e.clientY - (rect.top + rect.height / 2)
          );

          if (dist < 140) moveNo();
        });
      });
    } else {
      // On touch devices, optionally move the button a little when tapped to avoid frustration.
      noBtn.addEventListener('touchstart', (e) => {
        e.preventDefault();
        moveNo();
      }, { passive: false });
    }

    function moveNo() {
      if (noClicks >= 3) return;

      const area = buttonArea.getBoundingClientRect();
      const btn = noBtn.getBoundingClientRect();

      const maxX = Math.max(0, area.width - btn.width);
      const maxY = Math.max(0, area.height - btn.height);

      const x = Math.round(Math.random() * maxX);
      const y = Math.round(Math.random() * maxY);

      // place relative to buttonArea; clear 'right' so 'left' takes effect
      noBtn.style.left = x + 'px';
      noBtn.style.top = y + 'px';
      noBtn.style.right = 'auto';
    }

    /* -------- No Click Logic -------- */
    noBtn.addEventListener('click', () => {
      noClicks++;

      if (noClicks >= 3) {
        noBtn.style.display = 'none';
        return;
      }

      shrinkFactor = Math.max(0.55, shrinkFactor - 0.18);

      // use transform for smoother layout
      noBtn.style.transform = `scale(${shrinkFactor})`;
      moveNo();
    });

    // Keyboard accessibility: move the 'no' button if focused and arrow keys pressed
    noBtn.addEventListener('keydown', (e) => {
      const arrows = ['ArrowUp','ArrowDown','ArrowLeft','ArrowRight'];
      if (arrows.includes(e.key)) {
        e.preventDefault();
        moveNo();
      }
    });

    /* -------- Confetti sequence -------- */
    function sleep(ms) {
      return new Promise(resolve => setTimeout(resolve, ms));
    }

    // layered confetti bursts over ~1800ms
    async function launchConfettiSequence() {
      if (prefersReducedMotion) return;
      if (typeof confetti !== 'function') return;

      const colors = ['#ff4d6d', '#ff8fa3', '#ffd6e0', '#fff176', '#a5d6a7'];

      // Series of bursts: center big, left & right, then cascade showers
      const bursts = [
        { particleCount: 120, spread: 160, origin: { x: 0.5, y: 0.35 }, colors },
        { particleCount: 70, spread: 120, origin: { x: 0.25, y: 0.3 }, colors },
        { particleCount: 70, spread: 120, origin: { x: 0.75, y: 0.3 }, colors },
        { particleCount: 60, spread: 80, origin: { x: 0.15, y: 0.6 }, colors },
        { particleCount: 60, spread: 80, origin: { x: 0.85, y: 0.6 }, colors },
      ];

      // Play bursts with short delays
      for (let i = 0; i < bursts.length; i++) {
        const b = bursts[i];
        confetti({
          particleCount: b.particleCount,
          spread: b.spread,
          origin: b.origin,
          colors: b.colors,
          scalar: 1 + Math.random() * 0.2
        });
        await sleep(180 + Math.random() * 120);
      }

      // A short randomized "rain" of small bursts
      const rainEnd = Date.now() + 700;
      while (Date.now() < rainEnd) {
        confetti({
          particleCount: 18 + Math.floor(Math.random() * 12),
          spread: 50 + Math.random() * 40,
          origin: { x: Math.random(), y: 0.2 + Math.random() * 0.6 },
          colors
        });
        // small random gap
        await sleep(80 + Math.random() * 60);
      }
    }

    /* -------- Yes -------- */
    yesBtn.addEventListener('click', triggerYes);

    // Provide keyboard activation (space/enter)
    yesBtn.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' || e.key === ' ') {
        e.preventDefault();
        triggerYes();
      }
    });

    // make async so we can await confetti sequence if needed
    async function triggerYes() {
      // hide buttons, announce success
      buttonArea.style.display = 'none';
      buttonArea.setAttribute('aria-hidden', 'true');
      success.style.display = 'block';
      success.setAttribute('aria-hidden', 'false');

      // show scratch area below the card
      showScratch();

      // launch confetti sequence but don't block the UI
      if (!prefersReducedMotion && typeof confetti === 'function') {
        launchConfettiSequence();
      } else if (!prefersReducedMotion && typeof confetti !== 'function') {
        // fallback: simple celebratory scaling (non-essential)
        success.animate([
          { transform: 'scale(0.98)' },
          { transform: 'scale(1.02)' },
          { transform: 'scale(1)' }
        ], { duration: 600, easing: 'ease-out' });
      }
    }

    // Small improvement: ensure the "no" button initial left/top are set so moveNo calculations are consistent
    // (this also avoids mixing left/right positioning)
    (function initNoPos(){
      noBtn.style.left = '';
      noBtn.style.top = '';
      noBtn.style.right = '0';
      noBtn.style.top = '0';
    })();


    /* ---------------- Scratch implementation ---------------- */
    let ctx = null;
    let isDrawing = false;
    let lastPointer = { x: 0, y: 0 };
    let pixelRatio = window.devicePixelRatio || 1;
    const SCRATCH_RADIUS = 28; // base radius in CSS pixels
    const REVEAL_THRESHOLD = 0.45; // reveal when ~45% cleared

    function showScratch() {
      // Make visible (only once)
      if (scratchWrap.style.display === 'flex' || scratchWrap.style.display === 'block') return;
      // use 'flex' so layout/centering in CSS works as intended
      scratchWrap.style.display = 'flex';
      scratchWrap.setAttribute('aria-hidden', 'false');

      // Initialize the canvas to match the cover size
      // If the cover is not yet sized, defer slightly
      setTimeout(() => {
        setupScratchCanvas();
      }, 30);
    }

    function setupScratchCanvas() {
      // Remove previously-attached handlers to avoid duplicates when re-initializing
      try {
        scratchCanvas.removeEventListener('pointerdown', onPointerDown);
        window.removeEventListener('pointermove', onPointerMove);
        window.removeEventListener('pointerup', onPointerUp);
        scratchCanvas.removeEventListener('touchmove', touchMovePreventer);
        revealBtn.removeEventListener('click', revealFully);
        window.removeEventListener('resize', onWindowResize);
      } catch (e) { /* ignore if none attached */ }

      // Get layout size of cover
      const coverRect = scratchCover.getBoundingClientRect();
      const cssW = Math.max(60, Math.floor(coverRect.width));
      const cssH = Math.max(60, Math.floor(coverRect.height));

      // Pixel-perfect size for high-dpi displays
      pixelRatio = window.devicePixelRatio || 1;
      scratchCanvas.width = Math.floor(cssW * pixelRatio);
      scratchCanvas.height = Math.floor(cssH * pixelRatio);
      scratchCanvas.style.width = cssW + 'px';
      scratchCanvas.style.height = cssH + 'px';

      // Ensure touch-action is none for better touch responsiveness on mobile
      scratchCanvas.style.touchAction = 'none';

      ctx = scratchCanvas.getContext('2d', { willReadFrequently: true });
      if (!ctx) return;

      // Clear any existing pixels before redraw
      ctx.clearRect(0, 0, scratchCanvas.width, scratchCanvas.height);

      // Fill with a metallic-looking gradient
      const g = ctx.createLinearGradient(0, 0, scratchCanvas.width, scratchCanvas.height);
      g.addColorStop(0, '#bdbdbd');
      g.addColorStop(0.5, '#9e9e9e');
      g.addColorStop(1, '#bdbdbd');
      ctx.globalCompositeOperation = 'source-over';
      ctx.fillStyle = g;
      ctx.fillRect(0, 0, scratchCanvas.width, scratchCanvas.height);

      // Add some subtle noise / pattern to mimic scratch-off
      ctx.fillStyle = 'rgba(255,255,255,0.04)';
      const step = Math.max(6, Math.floor(6 * pixelRatio));
      for (let x = 0; x < scratchCanvas.width; x += step) {
        for (let y = 0; y < scratchCanvas.height; y += step*2) {
          if (Math.random() > 0.92) ctx.fillRect(x, y, 1, 1);
        }
      }

      // Prepare to erase with destination-out
      ctx.globalCompositeOperation = 'destination-out';
      ctx.lineCap = 'round';
      ctx.lineJoin = 'round';
      ctx.strokeStyle = 'rgba(0,0,0,1)';

      // Pointer event handlers
      scratchCanvas.addEventListener('pointerdown', onPointerDown, { passive: false });
      window.addEventListener('pointermove', onPointerMove, { passive: false });
      window.addEventListener('pointerup', onPointerUp, { passive: false });

      // Prevent scrolling when interacting (keep a named function so we can remove it later)
      scratchCanvas.addEventListener('touchmove', touchMovePreventer, { passive: false });

      // Fallback: reveal button
      revealBtn.addEventListener('click', revealFully);

      // Recompute when window resizes to keep crispness (simple approach: re-init)
      window.addEventListener('resize', onWindowResize);
    }

    // small helper to remove/attach the touchmove prevention
    function touchMovePreventer(e) { e.preventDefault(); }

    function onWindowResize() {
      // small debounce
      clearTimeout(onWindowResize._t);
      onWindowResize._t = setTimeout(() => {
        // If already revealed, nothing to do
        if (scratchCover.classList.contains('revealed')) return;
        setupScratchCanvas();
      }, 120);
    }

    function getPointerPos(e) {
      const rect = scratchCanvas.getBoundingClientRect();
      const x = (e.clientX - rect.left) * (scratchCanvas.width / rect.width);
      const y = (e.clientY - rect.top) * (scratchCanvas.height / rect.height);
      return { x, y };
    }

    function onPointerDown(e) {
      if (scratchCover.classList.contains('revealed')) return;
      isDrawing = true;
      scratchCanvas.setPointerCapture && scratchCanvas.setPointerCapture(e.pointerId);
      lastPointer = getPointerPos(e);
      drawAt(lastPointer.x, lastPointer.y);
      e.preventDefault();
    }

    function onPointerMove(e) {
      if (!isDrawing) return;
      const p = getPointerPos(e);
      // smooth line between lastPointer and p by drawing circles along the segment
      const dx = p.x - lastPointer.x;
      const dy = p.y - lastPointer.y;
      const dist = Math.hypot(dx, dy) || 1;
      const steps = Math.ceil(dist / (SCRATCH_RADIUS * pixelRatio / 3));
      for (let i = 0; i <= steps; i++) {
        const t = i / Math.max(1, steps);
        const ix = lastPointer.x + dx * t;
        const iy = lastPointer.y + dy * t;
        drawAt(ix, iy);
      }
      lastPointer = p;
      e.preventDefault();

      // occasionally check reveal percent
      if (Math.random() < 0.08) {
        computeRevealPercentage().then(pct => {
          if (pct >= REVEAL_THRESHOLD) revealFully();
        });
      }
    }

    function onPointerUp(e) {
      if (!isDrawing) return;
      isDrawing = false;
      scratchCanvas.releasePointerCapture && scratchCanvas.releasePointerCapture(e.pointerId);
      // final check
      computeRevealPercentage().then(pct => {
        if (pct >= REVEAL_THRESHOLD) revealFully();
      });
    }

    function drawAt(x, y) {
      if (!ctx) return;
      const r = Math.max(12, SCRATCH_RADIUS * pixelRatio);
      ctx.beginPath();
      ctx.arc(x, y, r, 0, Math.PI * 2);
      ctx.fill();
    }

    // sample the canvas alpha channel to estimate how much has been cleared
    async function computeRevealPercentage() {
      if (!ctx) return 0;
      try {
        // sample a coarse grid to keep it fast
        const w = scratchCanvas.width;
        const h = scratchCanvas.height;
        const step = Math.max(8, Math.floor(Math.min(w, h) / 40)); // ~40x40 samples
        const img = ctx.getImageData(0, 0, w, h);
        const data = img.data;
        let cleared = 0;
        let total = 0;
        for (let y = 0; y < h; y += step) {
          for (let x = 0; x < w; x += step) {
            const idx = (y * w + x) * 4 + 3; // alpha
            const a = data[idx]; // 0-255
            total++;
            // Count a pixel as "cleared" if it's mostly transparent (handle anti-aliasing)
            if (a < 64) cleared++;
          }
        }
        const pct = cleared / Math.max(1, total);
        return pct;
      } catch (err) {
        return 0;
      }
    }

    function revealFully() {
      // mark revealed
      scratchCover.classList.add('revealed');
      scratchCover.setAttribute('aria-hidden', 'true');
      // remove pointer handlers to free resources
      try {
        scratchCanvas.removeEventListener('pointerdown', onPointerDown);
        window.removeEventListener('pointermove', onPointerMove);
        window.removeEventListener('pointerup', onPointerUp);
        scratchCanvas.removeEventListener('touchmove', touchMovePreventer);
        revealBtn.removeEventListener('click', revealFully);
      } catch (e) { /* ignore */ }

      // optional small flourish
      try {
        scratchCover.animate([
          { opacity: 1, transform: 'scale(1)' },
          { opacity: 0.98, transform: 'scale(1.01)' },
          { opacity: 0, transform: 'scale(1.02)' }
        ], { duration: 420, easing: 'ease-out' });
      } catch (e) { /* ignore animation failures */ }
      // actually hide after transition
      setTimeout(() => {
        scratchCover.style.display = 'none';
      }, 450);
    }

    // If user prefers reduced motion, provide an immediate accessible fallback:
    if (prefersReducedMotion) {
      // make reveal button visible and disable scratch gestures
      scratchCover.style.pointerEvents = 'auto';
      revealBtn.style.display = 'inline-block';
    }

  </script>
</body>
</html>
